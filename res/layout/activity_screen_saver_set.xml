<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/screen_window"
    android:background="@color/DialogTransparency" >

    <LinearLayout
        android:id="@+id/info_window"
        android:layout_width="@dimen/info_dialog_height"
        android:layout_height="@dimen/info_dialog_height1"
        android:background="@color/White"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/info_window_button_margin_left"
            android:gravity="center"
            android:text="@string/screen_set"
            android:textColor="@color/Black"
            android:textSize="@dimen/info_dialog_info_text_size" />

        <Button
            android:id="@+id/btn_black"
            android:layout_width="@dimen/info_dialog_button_width1"
            android:layout_height="@dimen/title_bar_height"
            android:layout_marginTop="@dimen/info_window_button_margin_left"
            android:text="@string/screensaver_black"
            android:textColor="@color/White"
            android:textSize="@dimen/info_dialog_info_text_size" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_calendar"
            android:layout_width="@dimen/info_dialog_button_width1"
            android:layout_height="@dimen/title_bar_height"
            android:text="@string/screensaver_calendar"
            android:textColor="@color/DarkBlue"
            android:textSize="@dimen/info_dialog_info_text_size" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_picture"
            android:layout_width="@dimen/info_dialog_button_width1"
            android:layout_height="@dimen/title_bar_height"
            android:text="@string/screensaver_picture"
            android:textColor="@color/DarkBlue"
            android:textSize="@dimen/info_dialog_info_text_size" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="@dimen/info_dialog_button_width"
            android:layout_height="@dimen/title_bar_height"
            android:layout_marginTop="@dimen/info_window_button_margin_left"
            android:layout_marginBottom="@dimen/info_window_button_margin_left"
            android:background="@drawable/bg_button_blue_all"
            android:text="@string/save"
            android:textColor="@color/White"
            android:textSize="@dimen/info_dialog_info_text_size" />
        
    </LinearLayout>

</RelativeLayout>
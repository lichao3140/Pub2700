<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/title_bar_icon_height"
            android:layout_height="@dimen/title_bar_icon_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/title_bar_icon_margin_left"
            android:src="@drawable/cloud_intercom_call_forwarding"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/title_bar_text_margin_left"
            android:gravity="center_vertical"
            android:text="@string/call_forwarding"
            android:textColor="@color/White"
            android:textSize="@dimen/title_bar_text_size" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:id="@+id/layout_call_forwarding"
            android:layout_width="@dimen/info_dialog_edit_text_width"
            android:layout_height="@dimen/vertical_rectangle_button_height"
            android:background="@drawable/bg_button_blue_all"
            android:orientation="vertical" >
            
            <TextView 
                android:id="@+id/tv_call_forwarding"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/call_forwarding"
	            android:textColor="@color/White"
	            android:textSize="@dimen/info_dialog_info_text_size"/>
            
            <TextView 
                android:id="@+id/tv_call_forwarding_tips"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/info_window_button_margin_top"
                android:layout_marginRight="@dimen/info_window_button_margin_top"
                android:text="@string/call_forwarding_tips"
	            android:textColor="@color/White"
	            android:textSize="@dimen/button_text_size"/>
            
		</LinearLayout>

        <LinearLayout
            android:id="@+id/layout_call_not_forwarding"
            android:layout_width="@dimen/info_dialog_edit_text_width"
            android:layout_height="@dimen/vertical_rectangle_button_height"
            android:layout_marginLeft="@dimen/title_bar_height"
            android:background="@drawable/bg_button_blue_frame_white_inside"
            android:orientation="vertical" >
            
            <TextView 
                android:id="@+id/tv_call_not_forwarding"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/call_not_forwarding"
	            android:textColor="@color/DarkBlue"
	            android:textSize="@dimen/info_dialog_info_text_size"/>
            
            <TextView 
                android:id="@+id/tv_call_not_forwarding_tips"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/info_window_button_margin_top"
                android:layout_marginRight="@dimen/info_window_button_margin_top"
                android:text="@string/call_not_forwarding_tips"
	            android:textColor="@color/DarkBlue"
	            android:textSize="@dimen/button_text_size"/>
            
		</LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@color/color_button_transparency_purple"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:background="@color/color_button_transparency_purple"
            android:text="@string/back"
            android:textColor="@color/White"
            android:textSize="@dimen/info_window_button_text_size" />
        
        <View 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:background="@color/color_button_transparency_purple"
            android:text="@string/submit"
            android:textColor="@color/White"
            android:textSize="@dimen/info_window_button_text_size" />
        
    </LinearLayout>
</LinearLayout>
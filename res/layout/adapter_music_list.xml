<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TransparencyWhite"
    android:orientation="horizontal" >

	<ImageView
		android:id="@+id/image_ring_check"
		android:layout_width="@dimen/music_list_image_height"
		android:layout_height="@dimen/music_list_image_height"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="@dimen/music_list_image_margin_left"
		android:contentDescription="@null"
		android:src="@drawable/img_home_security_security_log_list_clicked" 
		android:visibility="invisible" />

	<TextView
	    android:id="@+id/tv_ring_name"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/music_list_height"
	    android:layout_marginLeft="@dimen/title_bar_text_margin_left"
	    android:gravity="center_vertical"
	    android:singleLine="true"
	    android:textColor="@color/Black"
	    android:textSize="@dimen/info_window_button_text_size" />

</LinearLayout>
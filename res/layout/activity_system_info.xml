<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:gravity="center|bottom"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
	        android:id="@+id/room_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingBottom="@dimen/info_window_button_margin_top"
	        android:paddingTop="@dimen/info_window_button_margin_top"
	        android:textColor="@color/White"
	        android:textSize="@dimen/title_bar_text_size" />
	
	    <TextView
	        android:id="@+id/ip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingBottom="@dimen/info_window_button_margin_top"
	        android:paddingTop="@dimen/info_window_button_margin_top"
	        android:textColor="@color/White"
	        android:textSize="@dimen/title_bar_text_size" />
	
	    <TextView
	        android:id="@+id/net_cfg_ver"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingBottom="@dimen/info_window_button_margin_top"
	        android:paddingTop="@dimen/info_window_button_margin_top"
	        android:textColor="@color/White"
	        android:textSize="@dimen/title_bar_text_size" />
	
	    <TextView
	        android:id="@+id/apk_version"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingBottom="@dimen/info_window_button_margin_top"
	        android:paddingTop="@dimen/info_window_button_margin_top"
	        android:textColor="@color/White"
	        android:textSize="@dimen/title_bar_text_size" />
	
	    <TextView
	        android:id="@+id/device_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingBottom="@dimen/info_window_button_margin_top"
	        android:paddingTop="@dimen/info_window_button_margin_top"
	        android:textColor="@color/White"
	        android:textSize="@dimen/title_bar_text_size" />
	
	    <TextView
	        android:id="@+id/system_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingBottom="@dimen/info_window_button_margin_top"
	        android:paddingTop="@dimen/info_window_button_margin_top"
	        android:textColor="@color/White"
	        android:textSize="@dimen/title_bar_text_size" />
	    
	    <TextView
	        android:id="@+id/firmware_version"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingBottom="@dimen/info_window_button_margin_top"
	        android:paddingTop="@dimen/info_window_button_margin_top"
	        android:textColor="@color/White"
	        android:textSize="@dimen/title_bar_text_size" />
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="20dp"
        android:background="@color/color_button_transparency_purple"
        android:orientation="horizontal">
	    
        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:background="@color/color_button_transparency_purple"
            android:text="@string/back"
            android:textColor="@color/White"
            android:textSize="@dimen/info_window_button_text_size" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            
            <Button
	            android:id="@+id/btn_exit_app"
	            android:layout_width="@dimen/button_width"
	            android:layout_height="match_parent"
	            android:background="@color/color_button_transparency_purple"
	            android:text="@string/text_exit_app"
	            android:textColor="@color/White"
	            android:textSize="@dimen/info_window_button_text_size" />
        </LinearLayout>      
    </LinearLayout>
</LinearLayout>
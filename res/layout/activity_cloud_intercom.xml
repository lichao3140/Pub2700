<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/title_bar_icon_height"
            android:layout_height="@dimen/title_bar_icon_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/title_bar_icon_margin_left"
            android:src="@drawable/cloud_intercom_bind"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/title_bar_text_margin_left"
            android:gravity="center_vertical"
            android:text="@string/bind_device"
            android:textColor="@color/White"
            android:textSize="@dimen/title_bar_text_size" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >
        
        <ImageView
	        android:id="@+id/image_qr_code"
	        android:layout_width="@dimen/qr_code_height"
	        android:layout_height="@dimen/qr_code_height"
	        android:background="@color/White" />
        
        <TextView
            android:id="@+id/tv_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/info_dialog_text_size"
            android:textColor="@color/White"
            android:layout_marginTop="@dimen/info_window_button_margin_left" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@color/color_button_transparency_purple"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:background="@color/color_button_transparency_purple"
            android:text="@string/back"
            android:textColor="@color/White"
            android:textSize="@dimen/info_window_button_text_size" />

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            
            <Button
	            android:id="@+id/btn_login"
	            android:layout_width="@dimen/button_width"
	            android:layout_height="match_parent"
	            android:background="@color/color_button_transparency_purple"
	            android:layout_marginRight="@dimen/button_margin_right"
	            android:text="@string/text_login"
	            android:textColor="@color/White"
	            android:textSize="@dimen/info_window_button_text_size" />
            
            <Button
	            android:id="@+id/btn_reboot"
	            android:layout_width="@dimen/button_width"
	            android:layout_height="match_parent"
	            android:background="@color/color_button_transparency_purple"
	            android:text="@string/text_reboot"
	            android:textColor="@color/White"
	            android:textSize="@dimen/info_window_button_text_size" />
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
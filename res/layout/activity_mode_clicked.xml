<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/screen_window"
    android:background="@color/DialogTransparency" >

    <RelativeLayout
        android:id="@+id/info_window"
	    android:layout_width="@dimen/info_dialog_width"
	    android:layout_height="@dimen/info_dialog_height"
	    android:layout_centerInParent="true"
	    android:background="@drawable/dialog_style">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:paddingBottom="@dimen/title_bar_height"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open"
                android:textColor="@color/Black"
                android:textSize="@dimen/info_dialog_info_text_size" />

            <TextView
                android:id="@+id/tv_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/DeepPurple"
                android:textSize="@dimen/info_dialog_info_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\?"
                android:textColor="@color/Black"
                android:textSize="@dimen/info_dialog_info_text_size" />
            
        </LinearLayout>

        <LinearLayout
           	android:layout_width="match_parent"
           	android:layout_height="@dimen/title_bar_height"
           	android:layout_alignParentBottom="true"
           	android:layout_marginTop="@dimen/info_window_button_margin_top"
	        android:layout_marginBottom="@dimen/info_window_button_margin_top"
          	android:orientation="horizontal" >

           	<Button
               	android:id="@+id/btn_cancel"
               	android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginLeft="@dimen/info_window_button_margin_left"
	            android:layout_marginRight="@dimen/info_window_button_margin_left"
	            android:background="@drawable/bg_btn_selector"
	            android:textColor="@color/Black"
	            android:textSize="@dimen/info_window_button_text_size"
	            android:text="@string/cancel" />

           	<Button
               	android:id="@+id/btn_confirm"
               	android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:layout_marginLeft="@dimen/info_window_button_margin_left"
	            android:layout_marginRight="@dimen/info_window_button_margin_left"
	            android:background="@drawable/bg_btn_selector2"
	            android:textColor="@color/White"
	            android:textSize="@dimen/info_window_button_text_size"
	            android:text="@string/submit" />
           	
       	</LinearLayout>
    </RelativeLayout>
</RelativeLayout>
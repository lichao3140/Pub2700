<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main" 
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:gravity="center"
    	android:orientation="horizontal" >
    	
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <Button
	            android:id="@+id/btn_room_num_set"
	            style="@style/style_horizontal_rectangle_button"
	            android:drawableTop="@drawable/ic_room_number_set"
	            android:text="@string/text_room_num_set" />
            
            <Button
	            android:id="@+id/btn_project_password_set"
	            style="@style/style_horizontal_rectangle_button"
            	android:layout_marginTop="@dimen/button_margin_left"
	            android:drawableTop="@drawable/ic_program_password"
	            android:text="@string/text_project_password_set" />
            
            <Button
	            android:id="@+id/btn_system_reset"
	            style="@style/style_horizontal_rectangle_button"
            	android:layout_marginTop="@dimen/button_margin_left"
	            android:drawableTop="@drawable/ic_system_reset"
	            android:text="@string/text_system_reset" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/button_margin_left"
            android:orientation="vertical">
            
            <Button
	            android:id="@+id/btn_unlock_set"
	            style="@style/style_horizontal_rectangle_button"
	            android:drawableTop="@drawable/ic_unlock_set"
	            android:text="@string/text_unlock_set" />
            
            <Button
	            android:id="@+id/btn_villa_extension_set"
	            style="@style/style_horizontal_rectangle_button"
            	android:layout_marginTop="@dimen/button_margin_left"
	            android:drawableTop="@drawable/ic_villa_extension_set"
	            android:text="@string/text_villa_extension_set" />
            
            <Button
	            android:id="@+id/btn_project_webcamera"
	            style="@style/style_horizontal_rectangle_button"
            	android:layout_marginTop="@dimen/button_margin_left"
	            android:drawableTop="@drawable/ic_building_monitor"
	            android:text="@string/web_camera" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/button_margin_left"
            android:orientation="vertical">
            
            <Button
	            android:id="@+id/btn_unlock_psd"
	            style="@style/style_horizontal_rectangle_button"
	            android:drawableTop="@drawable/ic_unlock_password"
	            android:text="@string/text_unlock_password" />
            
            <Button
	            android:id="@+id/btn_defence_area_set"
	            style="@style/style_horizontal_rectangle_button"
            	android:layout_marginTop="@dimen/button_margin_left"
	            android:drawableTop="@drawable/ic_defence_area_set"
	            android:text="@string/text_defence_area_set" />
            
            <Button
	            android:id="@+id/btn_project_smart_serv"
	            style="@style/style_horizontal_rectangle_button"
            	android:layout_marginTop="@dimen/button_margin_left"
	            android:drawableTop="@drawable/ic_server_ip_set"
	            android:text="@string/smart_server_ip" />
            
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@color/color_button_transparency_purple"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/button_width"
            android:layout_height="match_parent"
            android:background="@color/color_button_transparency_purple"
            android:text="@string/back"
            android:textColor="@color/White"
            android:textSize="@dimen/info_window_button_text_size" />
        
    </LinearLayout>
</LinearLayout>